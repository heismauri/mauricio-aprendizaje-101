<h2>Inicia sesión</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  <%= f.input :password,
                label: 'Contraseña',
                required: false,
                input_html: { autocomplete: "current-password" } %>
  <%= f.input :remember_me, label: "Mantenerme conectado", as: :boolean if devise_mapping.rememberable? %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Inicia sesión", class: 'btn btn-primary' %>
  <%= render "devise/shared/links" %>
</div>
<% end %>
